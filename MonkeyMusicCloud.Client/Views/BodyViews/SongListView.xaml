<UserControl x:Class="MonkeyMusicCloud.Client.Views.BodyViews.SongListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:BodyViews="clr-namespace:MonkeyMusicCloud.Client.Views.BodyViews" xmlns:BodyViewModels="clr-namespace:MonkeyMusicCloud.Client.ViewModels.BodyViewModels" xmlns:Behaviours="clr-namespace:MonkeyMusicCloud.Client.Views.CustomControls" mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.DataContext>
        <BodyViewModels:SongListViewModel />
    </UserControl.DataContext>
    <Grid>
        <ListView HorizontalAlignment="Stretch"  
          Behaviours:GridViewColumnResize.Enabled="True" Name="lvSongList" VerticalAlignment="Top" Height="600" Width="800" Margin="0,0,0,0" ItemsSource="{Binding SongList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView AllowsColumnReorder="true"  ColumnHeaderToolTip="Musics">

                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Title}" Behaviours:GridViewColumnResize.Width="2*" Behaviours:GridViewColumnResize.Enabled="True"  />
                    <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Path=Album}" Behaviours:GridViewColumnResize.Width="1*" Behaviours:GridViewColumnResize.Enabled="True"  />
                    <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Path=Artist}" Behaviours:GridViewColumnResize.Width="1*" Behaviours:GridViewColumnResize.Enabled="True"  />
                    <GridViewColumn Behaviours:GridViewColumnResize.Width="2*"  Behaviours:GridViewColumnResize.Enabled="True" >
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBox x:Name="tbSearch" Width="200">
                                    <TextBox.InputBindings>
                                        <KeyBinding Command="{Binding  DataContext.SearchSongsListCommand, RelativeSource={RelativeSource FindAncestor,
                                                                                                                 AncestorType={x:Type BodyViews:SongListView}}}"
                                                    CommandParameter="{Binding ElementName=tbSearch, Path=Text}" Key="Enter" />
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="24" Height="24" Command="{Binding  DataContext.AddSongToPlayListCommand,
                                                                                  RelativeSource={RelativeSource FindAncestor,
                                                                                                                 AncestorType={x:Type BodyViews:SongListView}}}"  
                                                               CommandParameter="{Binding ElementName=lvSongList, Path=SelectedItems}">
                                    <Image Source="../../Themes/Images/add.png" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
