<UserControl x:Class="MonkeyMusicCloud.Client.Views.BodyViews.SongListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:BodyViews="clr-namespace:MonkeyMusicCloud.Client.Views.BodyViews" 
             xmlns:BodyViewModels="clr-namespace:MonkeyMusicCloud.Client.ViewModels.BodyViewModels"
             mc:Ignorable="d" d:DesignWidth="800">
    <UserControl.DataContext>
        <BodyViewModels:SongListViewModel />
    </UserControl.DataContext>
    <Grid>
        <ListView  Name="lvSongList" VerticalAlignment="Top" Width="800" 
                   Margin="0,0,0,0" ItemsSource="{Binding SongList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <ListView.View>
                <GridView AllowsColumnReorder="true"  ColumnHeaderToolTip="Musics">
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Title}"  />
                    <GridViewColumn Header="Album">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                    <Button Command="{Binding  DataContext.OpenAlbumCommand,
                                                                                  RelativeSource={RelativeSource FindAncestor,
                                                                                                                 AncestorType={x:Type BodyViews:SongListView}}}"                                        
                                                                       CommandParameter="{Binding Path=Album}">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Label Content="{Binding Path=Album}" />
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand" />
                                            </Style>
                                        </Button.Style>
                                    </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Path=Artist}" />
                    <GridViewColumn Width="200">
                        <GridViewColumnHeader Command="{Binding  DataContext.AddSongsToPlayListCommand, RelativeSource={RelativeSource FindAncestor,
                                                                                              AncestorType={x:Type BodyViews:SongListView}}}"
                                              CommandParameter="{Binding ElementName=lvSongList, Path=ItemsSource}" Content="Play All" />                            
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button HorizontalAlignment="Center" Width="24" Height="24" Command="{Binding  DataContext.AddOneSongToPlayListCommand, RelativeSource={RelativeSource FindAncestor,
                                                                                                                        AncestorType={x:Type BodyViews:SongListView}}}"  
                                                               CommandParameter="{Binding}">
                                    <Image Source="../../Themes/Images/add.png" />
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
