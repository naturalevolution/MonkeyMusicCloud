<Window x:Class="MonkeyMusicCloud.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Views="clr-namespace:MonkeyMusicCloud.Client.Views" xmlns:BodyViews="clr-namespace:MonkeyMusicCloud.Client.Views.BodyViews" Title="Groovy Funky, Let's go!!!" Height="900" Width="1315"
        Background="{StaticResource ResourceKey=WindowBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="600" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <BodyViews:SearchView Grid.Column="0" Grid.Row="0" />
        <Views:MenuView Grid.Column="0" Grid.Row="1 "/>
        <Views:ContentBodyView Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" />
        <Views:PlayListView Grid.Column="2" Grid.RowSpan="2" />
    </Grid>
</Window>