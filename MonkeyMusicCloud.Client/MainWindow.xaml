<Window x:Class="MonkeyMusicCloud.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Views="clr-namespace:MonkeyMusicCloud.Client.Views" 
        Title="Groovy Funky, Let's go!!!" Height="900" Width="1315"
        Background="{StaticResource ResourceKey=WindowBackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="800" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="600" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Views:ContentBodyView Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" />
        <Views:PlayListView Grid.Column="2" Grid.RowSpan="2" />
    </Grid>
</Window>