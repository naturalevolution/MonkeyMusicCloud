<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:MonkeyMusicCloud.Client.Views"
                    >
    <DataTemplate x:Key="MenuItemTemplate">
        <StackPanel>
            <Button Height="50" Margin="10"  Command="{Binding DataContext.OpenItemCommand, 
                                                                                     RelativeSource={RelativeSource FindAncestor, AncestorType=views:MenuView}}"
                                                                   CommandParameter="{Binding}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{Binding Path=ImagePath}" Width="20px" />
                    <TextBlock Grid.Column="1" Text="{Binding Path=Label}" />
                </Grid>

            </Button>
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>